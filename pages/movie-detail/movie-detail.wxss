@import "../comment/comment-list/commentlist-template.wxss";
@import "../star/star-template.wxss";
.container {
  width: 100%;
  padding-bottom: 40rpx;
}

.head {
  width: 100%;
  height: 320rpx;
  background-color: rgba(0, 0, 0, 0.6);
}

.bg-img {
  position: absolute;
  width: 100%;
  height: 320rpx;
  z-index: -1;
}

.film-img {
  position: absolute;
  top: 96rpx;
  left: 36rpx;
  width: 180rpx;
  height: 254rpx;
  background-color:#333;
  
}

.film-text {
  margin-left: 246rpx;
  margin-top: 120rpx;
  font-size: 0;
}

.name, .ename {
  display: block;
  font-size: 46rpx;
  line-height: 56rpx;
  letter-spacing: 3rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  color: #fff;
}

.film-score {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.score {
  display: inline-block;
  font-size: 60rpx;
  color: #fff;
}

.film-comment {
  display: flex;
  flex-direction: column;
  margin-left: 14rpx;
  vertical-align: top;
  margin-top: 10rpx;
}



.comment {
  margin-top: 10rpx;
  font-size:24rpx;
  color: #aaa;
}

.content {
  margin: 74rpx 36rpx 0;
}

.info {
  margin-bottom: 40rpx;
}

.info text {
  display: block;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #494949;
}

.btn view {
  display: inline-block;
  width: 325rpx;
  height: 62rpx;
  line-height: 64rpx;
  border: 1px solid #ffdb89;
  border-radius: 10rpx;
  margin-right: 11rpx;
  text-align: center;
  font-size: 30rpx;
  color: #ffdb89;
}

.btn view:last-child {
  margin-right: 0;
}

.intro {
  margin-top: 70rpx;
}

.intro-title {
  display: block;
  margin-bottom: 24rpx;
  font-size: 30rpx;
  color: #aaa;
}

.intro-content {
  display: -webkit-box;
  font-size: 28rpx;
  line-height: 42rpx;
  color: #494949;
  overflow: hidden;
  -webkit-line-clamp: 3;
  -webkit-box-orient:vertical;
}

.comments {
  margin-top: 60rpx;
}

.count {
  display: block;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  color: #aaa;
}

.comment-list {
  margin-bottom: 60rpx;
}


.comment-more {
  font-size:28rpx;
  color: #42bd56;
  text-align: center
}