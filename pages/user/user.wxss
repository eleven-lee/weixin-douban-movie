
@import "../movie-list/movie-list-template.wxss";
.user-container {
  height: 100%;
}

.header {
  width: 100%;
  height: 420rpx;
  background-color: #333;
}

.avatar {
  padding-top: 32rpx;
  box-sizing: border-box;
}

.avatar image {
  width: 208rpx;
  height: 208rpx;
  border-radius: 50%;
  display: block;
  margin: 0 auto;
}

.username {
  margin-top: 20rpx;
  font-size: 46rpx;
  color: #fff;
  text-align: center;
}

.follow {
  display: block;
  margin: 20rpx auto 0;
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  border: 1px solid #fff;
  border-radius: 3rpx;
  color: #fff;
  text-align: center;
}

.content {
  margin-top: 30rpx;
}

.life-template{
  margin-top:30rpx;
}

.comments {
  width: 100%;
  margin-top: 30rpx;
  margin-bottom: 60rpx;
  padding: 0 36rpx;
  box-sizing: border-box;
}

.comment-list {
  margin-top: 30rpx;
}

.comment-item {
  margin-bottom: 40rpx;
  font-size: 0;
}

.desc {
  display: flex;
  flex-direction: row;
}

.avatar-small {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 14rpx;
}

.user-info {
  flex-direction: column;
  vertical-align: top;
  margin-top: 10rpx;
}

.user {
  font-size: 30rpx;
  color: #111;
  margin-right: 10rpx;
}

.star {
  display: inline-block;
}

.star image {
  display: inline-block;
  margin-right: 6rpx;
  width: 16rpx;
  height: 16rpx;
}

.date {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #aaa;
}

.text {
  display: block;
  margin-left: 79rpx;
  margin-top: 14rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #494949;
}
